page {
    font-size: 22rpx;
    color: #333;
    background: #F0F2F5;
}

.search_container {
    position: relative;
    width: 100;
    height: 100%;
}

.header_search {
    padding: 14rpx 12rpx 10rpx 12rpx;
    height: 84rpx;
    background: #fff;
}


.header_search .input {
    width: 594rpx;
    height: 60rpx;
    border-radius: 28rpx;
    opacity: 0.6;
    background-color: #ddd;
    font-size: 26rpx;
    color: #999;
    padding-left: 32rpx;
    box-sizing: border-box;
    caret-color: #0075a9;
}

.history_search {
    margin-top: 26rpx;

}

.top {
    display: flex;
    justify-content: space-between;
}

.top .icon_delete {
    font-size: 32rpx;
}

.search {
    padding-left: 22rpx;
    padding-right: 23rpx;
}

.items {

    width: 100%;
    display: flex;
    flex-wrap: wrap;
}

.item {
    margin-top: 32rpx;
    padding: 10rpx 21rpx;
    border-radius: 9rpx;
    background-color: #d7d9dc;
    margin-right: 17rpx;
}

.hot_search {
    margin-top: 31rpx;
}

.no-data {
    margin-top: 200rpx;
}